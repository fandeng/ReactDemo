import React,{Component} from 'react';
import{
	StyleSheet,
	Text,
	View,
	BackAndroid,
	TouchableOpacity,
ScrollView,
} from 'react-native';

import HeaderView from '../common/HeaderView';
import Common from '../common/common';

class LoanDetail extends Component{
	constructor(props) {
	  super(props);
	
	  this.state = {
	  	info:null,
	  };
	}
	 componentDidMount() {
	 	this.setState({
	 		info:this.props.info
	 	});
	 }
	render(){

		return (
				<View >
					<HeaderView 
						titleView= {'贷款详情'}
		                    leftIcon={'angle-left'}
		                    leftIconAction={() => this.props.navigator.pop() }
					/>
					<ScrollView>
						<View style={{flex:1,flexDirection:'row',justifyContent: 'center',height:120,paddingTop:15,paddingBottom:15}}>
							
							<Text style={[styles.text_frist_style,{height:120}]}>借款金额（元）</Text>
						
							<Text style={[styles.text_frist_style,{}]}>300.00</Text>
							<Text style={styles.text_frist_style}></Text>
						</View>
					</ScrollView>
				</View>
			);

	}
}

var styles =StyleSheet.create({
	container: {
    flex: 1,
    flexDirection: 'column',
	height:180,
	paddingLeft:20,
	paddingRight:20,
	marginTop:30,

  },
  text_frist_style:{
  	flex:1,alignItems:'center',justifyContent: 'center',
 fontSize: 20,
 textAlign: 'center',
  }
});

module.exports = LoanDetail;