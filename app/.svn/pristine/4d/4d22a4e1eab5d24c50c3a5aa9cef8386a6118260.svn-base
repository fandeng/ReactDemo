


import React, { Component } from 'react';
import {
    View,
    Text,
    Image,
} from 'react-native';
import TabNavigator from 'react-native-tab-navigator';

import HomeContainer from '../containers/HomeContainers';
// import AnswersContainers from '../containers/AnswersContainers';
import MineContainer from '../containers/MineContainer';

// import CollectContainer from '../containers/CollectContainer';




const tabBarItems = [
    { title: '首页',  icon: () => <Image style={{ width: 26, height: 26 }} source={require("../img/bless.png")}/>, component: HomeContainer },
    // { title: '账户',icon: () => <Image style={{ width: 26, height: 26 }} source={require("../img/tour.png")}/>,component: AnswersContainers },
    // { title: '帮助',icon: () => <Image style={{ width: 26, height: 26 }} source={require("../img/essay.png")}/>,component: CollectContainer },
    { title: '我的',  icon: () => <Image style={{ width: 26, height: 26 }} source={require("../img/love.png")}/>,component: MineContainer, },

]


export default class TarBarView extends Component {
    constructor(props) {
        super(props);
        this.state = {
            selectedTab: tabBarItems[0].title,
        };
    }
    render() {
        return (
            <TabNavigator tabBarStyle={{ height: 49, backgroundColor:'white'}}>
                {
                    tabBarItems.map((controller, i) => {
                        let Component = controller.component;
                        return (
                            <TabNavigator.Item
                                key= {i}
                                selected={this.state.selectedTab === controller.title}
                                title={controller.title}
                                renderIcon={controller.icon}
                                renderSelectedIcon={() => <Image style={{width: 26, height: 26,marginTop: 5}} source={require("../img/food.png")}/>}
                                onPress={() => this.setState({ selectedTab: controller.title }) }>
                                <Component navigator = {this.props.navigator} {...this.props}/>
                            </TabNavigator.Item>
                        )
                    })
                }
            </TabNavigator >

        );
    }


}
