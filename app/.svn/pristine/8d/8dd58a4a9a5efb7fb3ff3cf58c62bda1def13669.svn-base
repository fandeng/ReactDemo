'use strict'
import React, { Component } from 'react';
import {
    StyleSheet,
    Text,
    TextInput,
    ScrollView,
    View,
    Dimensions,
    Platform,
    TouchableOpacity,
    InteractionManager,
    Alert,
} from 'react-native';

import Common from '../common/common';
var FIRSTNAMES  = ['姓名', '电话','住址','关系'];
var FIRSPLACEHOLDER  = ['请输入姓名', '请输入电话','请输入住址','请输入关系'];
class EmergencyContactContainer extends Component {
   renderItems(data){
     return data.map(function(items,i){
        return (
          <View key={i} style={{height:55,alignItems: 'center',backgroundColor:'white'}}>
              <View style={{height:54,alignItems: 'center',flexDirection: 'row',backgroundColor:'white'}}>
                  <Text style={styles.title_content}>{items}</Text>
                  <TextInput
                    style={styles.name_input}
                    placeholder={FIRSPLACEHOLDER[i]}
                    numberOfLines={1}
                    autoFocus={false}
                    textAlign='right'
                    underlineColorAndroid={'transparent'}
                    keyboardType = {i == 1?'numeric':'default'}
                  />
            </View>
            <View style={{height:1,backgroundColor:'white'}}>
                  <View style={{height:1,backgroundColor:'#f4f4f4',marginLeft:10,width:Common.window.width-10}}/>
            </View>
          </View>
       )
     });
    }
    render() {
        return (
          <View>
              <ScrollView scrollEnabled={false} style={{backgroundColor:'#f0f1f2', height: 55*5,width:Common.window.width}}>
                  <View style={{height:55,alignItems: 'center'}}>
                       <Text style={styles.title_promte}>哗啦贷不会向联系人泄露您的借款信息，请放心填写</Text>
                  </View>
                  {this.renderItems(FIRSTNAMES)}
              </ScrollView>
          </View>
      );
    }
    //添加联系人点击事件
    // _onPressFeedItem() {
    //     InteractionManager.runAfterInteractions(() => {
    //           Alert.alert('温馨提示','待实现')
    //     });
    // }
}

const styles = StyleSheet.create({
    title_promte:{
      marginTop:20,
      height:20,
      textAlign: 'center',
      fontSize: 13,
      color: '#999999',
    },
    title_content:{
      marginLeft:10,
      height:20,
      marginTop:8,
      width:80,
      textAlign: 'left',
      fontSize: 14,
      color: '#333333',
    },
    name_input:{
      marginLeft:10,
      marginTop:5,
      fontSize:14,
      width:Common.window.width-110,
      height:45,
      color:'#666666'
    },
    phone_input:{
      marginLeft:10,
