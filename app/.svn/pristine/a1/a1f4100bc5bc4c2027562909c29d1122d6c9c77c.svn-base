//个人信息显示进度条
import React, {
    Component
} from 'react';

import  {
  AppRegistry,
  StyleSheet,
  Text,
  View,
  Dimensions,
  Platform,
  TouchableOpacity,
  InteractionManager,
  Image,
  Alert,
} from 'react-native';

import Common from '../common/common';

class InformationProgressContainer extends Component {
  renderItems(data){
		return data.map(function(items,i){
			return (
				<Text key={i} style = {i>=2?styles.card_style:styles.cardText}>{items}</Text>
			)
		});
	}
  render() {
    const {image} = this.props;
    const {progressArray} = this.props;
    return (
      <View style={styles.style_view}>
          <Image style= {styles.style_image} source={image}/>
          <View style = {styles.style_back}>
  					{this.renderItems(progressArray)}
  				</View>
      </View>
    );
  }
}
const styles = StyleSheet.create({
  style_view:{
    width:Common.window.width,
    height: 120,
    backgroundColor:'white',
    alignItems: 'center',
  },
  style_image: {
    width:Common.window.width-20,
    height: 30,
    marginTop:30,
  },
  style_back:{
    width:Common.window.width-20,
    height:30,
    flexDirection:'row',
    justifyContent: 'space-around',
  },
  cardText:{
    width:(Common.window.width-60)/4,
    height:20,
    marginTop:5,
    marginLeft:10,
    color:'#333333',
    fontSize: 13,
    textAlign:'center',
  },
  card_style:{
    width:(Common.window.width-60)/4,
    height:20,
    marginTop:5,
    marginLeft:10,
    color:'#333333',
    fontSize: 13,
    textAlign:'left',
  },
});
// items ==' 75%'|| items == '100%'
module.exports = InformationProgressContainer;
