import React,{Component} from 'react';
import{
	StyleSheet,
	Text,
	View,
	BackAndroid,
	Platform,
	TouchableOpacity,
ScrollView,
} from 'react-native';

import HeaderView from '../common/HeaderView';
import Common from '../common/common';

class LoanDetail extends Component{
	constructor(props) {
	  super(props);
	
	  this.state = {
	  	info:this.props.info,
	  };
	}
	 componentDidMount() {
	 	this.setState({
	 		info:this.props.info,
	 	});
	 console.log('detial info======>'+this.state.info);
	 console.log('props info======>'+this.props.info);
	 }
	render(){

		return (
				<View >
					<HeaderView 
						titleView= {'贷款详情'}
		                    leftIcon={'angle-left'}
		                    leftIconAction={() => this.props.navigator.pop() }
					/>
					<ScrollView  style={styles.contentContainer}>


						<View style={styles.view_line_style}>
							<View style={[styles.text_frist_style,{alignItems:'flex-start'}]}>
							<Text style={{textAlign:'center',fontSize:18}}>借款金额(元)</Text>
						</View>
						<View style={[styles.text_frist_style,{marginLeft:20}]}>
							<Text style={{textAlign:'left',fontSize:28,fontWeight:'bold'}}>300.00</Text>
							</View>
							<Text style={styles.text_frist_style}></Text>
						</View>


					<View style={styles.view_line_style}>
							<View style={[styles.text_frist_style,{alignItems:'flex-start'}]}>
								<Text style={{textAlign:'center',fontSize:18}}>借款期限(月)</Text>
							</View>
							<View style={[styles.text_frist_style,{marginLeft:20}]}>
								<Text style={{textAlign:'left',fontSize:28,fontWeight:'bold'}}>3</Text>
							</View>
							<View style={styles.text_frist_style}>
								<TouchableOpacity style={styles.button}
									onPress = {this.onClick.bind(this)}>
									<Text style={{textAlign:'center'}}>{this.state.info==0 ? '未通过':'已通过'}</Text>
								</TouchableOpacity>
							</View>
					</View>
		
					<View style={{flex:1,backgroundColor:'#D3D3D3',height:20}}></View>
					<View style={{flexDirection:'column',height:140,paddingLeft:28,paddingRight:28,paddingTop:20,flex:1,}}>
						<View style={{flexDirection:'row',height:30}}>
							<View style={{height:28,width:8,backgroundColor:'#1a98ff', borderRadius: 10}}></View>
							<Text style={{flex:1,marginLeft:8,textAlign:'left',fontSize:18}}>拒绝原因</Text>
						</View>
						<Text style={{fontSize:16,color:'#FF0000',marginTop:10,marginLeft:10,marginBottom:10}}>看见奥斯卡会计师斯蒂芬么了冒犯了深刻的麻烦了双开门的法卡就到了卡机</Text>
					</View>

					<View style={{flex:1,backgroundColor:'#D3D3D3',height:20}}></View>

					<View style={{flexDirection:'column',height:240,paddingLeft:28,paddingRight:28,paddingTop:20,flex:1,}}>
						<View style={{flexDirection:'row',height:30}}>
							<View style={{height:28,width:8,backgroundColor:'#1a98ff', borderRadius: 10}}></View>
							<Text style={{flex:1,marginLeft:8,textAlign:'left',fontSize:18}}>拒绝原因</Text>
						</View>
							<View style={{flexDirection:'row'}}>
							<Text style={styles.text_third_style}>项目编号:</Text>
							<Text style={[styles.text_third_style,{color:'#000000'}]}>1234567890</Text>
							</View>

							<View style={{flexDirection:'row'}}>
							<Text style={styles.text_third_style}>借款金额:</Text>
							<Text style={[styles.text_third_style,{color:'#000000'}]}>￥300.00</Text>
							</View>

							<View style={{flexDirection:'row'}}>
							<Text style={styles.text_third_style}>借款期限:</Text>
							<Text style={[styles.text_third_style,{color:'#000000'}]}>3个月</Text>
							</View>

							<View style={{flexDirection:'row'}}>
							<Text style={styles.text_third_style}>分期还款:</Text>
							<Text style={[styles.text_third_style,{color:'#000000'}]}>是</Text>
							</View>

							<View style={{flexDirection:'row'}}>
							<Text style={styles.text_third_style}>还款方式:</Text>
							<Text style={[styles.text_third_style,{color:'#000000'}]}>等额本息</Text>
							</View>

							<View style={{flexDirection:'row'}}>
							<Text style={styles.text_third_style}>申请时间:</Text>
							<Text style={[styles.text_third_style,{color:'#000000'}]}>2016-09-16 15:24:35</Text>
							</View>
					</View>

					<View style={{flex:1,backgroundColor:'#D3D3D3',height:100,alignItems:'center',paddingTop:20}}>
						<TouchableOpacity style={[styles.button,{width: Common.window.width-50,backgroundColor: '#1a98ff',height:40}]}
									onPress = {this.onClick.bind(this)}>
									<Text style={{textAlign:'center'}}>{this.state.info==0 ? '未通过':'已通过'}</Text>
								</TouchableOpacity>

					</View>




					</ScrollView>
				</View>
			);

	}

	onClick(){

	}
}

var styles =StyleSheet.create({
	container: {
    flex: 1,
    flexDirection: 'column',
	height:180,


  },
  view_line_style:{
  	flex:1,flexDirection:'row',justifyContent: 'center',height:80,
  		paddingLeft:28,
	paddingRight:28,
  },
  text_frist_style:{
  	flex:1,alignItems:'flex-start',justifyContent: 'center',
 
  },
  button: {
        width: 90,
		height:30,
        backgroundColor: '#999999',
        alignItems:'center',justifyContent: 'center',
        borderRadius: 10,
		
    },
   text_third_style:{
   	fontSize:16,color:'#999999',marginTop:8,marginLeft:10,
   },
   contentContainer: {
      paddingVertical: 0,
      flexDirection:'column',
      flex:1,
      height: Platform.OS == 'ios'? Common.window.height-64:Common.window.height - 50,
    },
});

module.exports = LoanDetail;